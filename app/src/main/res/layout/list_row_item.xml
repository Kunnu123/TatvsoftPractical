<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivUserImage"
            android:layout_width="50dp"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_height="50dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtUserName"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="24sp"
            tools:text="Krunal Pujara"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llOddLayout"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv1_odd"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <LinearLayout
            android:id="@+id/llthree"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv2_odd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_height="200dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv3_odd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_marginStart="10dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFive"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv4_odd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_height="200dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv5_odd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_marginStart="10dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llEvenLayout"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/llTwo_even"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv1_even"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_height="200dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv2_even"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_marginStart="10dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFour"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv3_even"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_height="200dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv4_even"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_marginStart="10dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>